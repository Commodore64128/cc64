#!/bin/echo Please source this file

# imput:
# $target $hostfiles $test_paths

# Build test binary
(
  cat "include-${lib}-${target}.h"
  cat "test-setup-${target}.h"
  echo "char *name(){ return \"suite.out,s,w\"; }"
  for tp in $test_paths; do
    cat ${tp}-test.c
  done
  echo "test(){"
  for tp in $test_paths; do
    t=$(basename ${tp})
    echo "  println(\"${tp}-test:\");"
    echo "  ${t}_test();"
  done
  echo "}"
  cat test-main.h
) | tee suite-generated.c | ascii2petscii - "${hostfiles}/suite.c"
